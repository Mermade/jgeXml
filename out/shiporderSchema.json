{
  "title": "test/shiporderSchema.xsd",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "shiporder": {
      "properties": {
        "@invoiceid": {
          "type": "string"
        },
        "@orderid": {
          "type": "string"
        },
        "orderperson": {
          "type": "string"
        },
        "shipto": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "country": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "address",
            "city",
            "country"
          ],
          "additionalProperties": false
        },
        "item": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "note": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "quantity": {
                "minimum": 1,
                "type": "integer"
              },
              "price": {
                "type": "number"
              }
            },
            "required": [
              "title",
              "quantity",
              "price"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "orderperson",
        "shipto",
        "item",
        "@orderid"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "shiporder"
  ],
  "additionalProperties": false
}